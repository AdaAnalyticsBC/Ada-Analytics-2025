{
  "name": "quiver-mcp-server",
  "version": "1.0.0",
  "description": "Quiver Quant MCP Server for Ada Analytics Trading Agent",
  "exports": "./main.ts",
  "tasks": {
    "start": "deno run --allow-net --allow-env main.ts",
    "dev": "deno run --allow-net --allow-env --watch main.ts",
    "test": "deno test --allow-net --allow-env"
  },
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  },
  "fmt": {
    "files": {
      "include": ["main.ts", "*.ts"],
      "exclude": ["node_modules/"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "files": {
      "include": ["main.ts", "*.ts"],
      "exclude": ["node_modules/"]
    },
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "imports": {
    "@std/": "https://deno.land/std@0.208.0/",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.0.0",
    "zod": "npm:zod@^3.22.0"
  },
  "permissions": {
    "allow-net": [
      "api.quiverquant.com",
      "127.0.0.1",
      "localhost"
    ],
    "allow-env": [
      "QUIVER_API_TOKEN",
      "PORT"
    ]
  }
}
